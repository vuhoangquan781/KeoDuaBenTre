
@{
    ViewBag.Title = "Login";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Login Admin</title>
    <style>
        .body {
            margin: auto;
            max-width: 600px;
            min-height: 300px;
            border: 1px solid #000000;
        }
    </style>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="body mt-md-5 p-3">
            <h3 class="text-center text-danger">ĐĂNG NHẬP HỆ THỐNG</h3>
            <div class="form-group">
                <label>UserName</label>
                <input name="Email" class="form-control" type="text" required placeholder="nhập username hoặc Email" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input name="Password" class="form-control" type="password" required placeholder="nhập password" />
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-danger">Login</button>
            </div>

            <div class="form-group ">

                <span class="text-danger">@ViewBag.error</span>
            </div>
        </div>
    }
</body>
</html>