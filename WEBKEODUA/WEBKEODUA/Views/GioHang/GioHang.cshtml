@*@model IEnumerable<MVC_Bai6_KetNoiLINQ.Models.GioHang>*@
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using WEBKEODUA.Models;
@model List<GioHang>
<h2>GioHang</h2>

<div class="class=card border-dark">
    <table class="table">
        <tr style="background-color:lightyellow">
            <th>Mã SP</th>
            <th>Tên Sản Phẩm</th>
            <th>Ảnh</th>
            <th>Số Lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
            <th>@Html.ActionLink("Xóa ALL", "XoaGioHang_All", "GioHang")</th>
            <th></th>
            <th></th>


        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td width="">@item.iMaSP</td>
                <td width="">@item.sTenSP</td>
                <td width=""><img src="/Image/@item.sAnh" width="100%" /></td>
                @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @MaSP = item.iMaSP }))
                {
                    <td width=""><input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" size="2" /></td>
                    <td width="">@String.Format("{0:0,0}", item.dDonGia)</td>
                    <td width="">@String.Format("{0:0,0}", item.dThanhTien)</td>

                    <td>@Html.ActionLink("Xóa", "XoaGioHang", new { @MaSP = item.iMaSP })</td>
                    <td><input type="submit" value="Cap Nhat" class="btn btn-primary" /></td>
                }
            </tr>
        }
        <tr style="background-color:lightyellow">
            <td colspan="3" style="color:blue; font-weight:bold; text-align:right">Tong Cong</td>
            <td style="color:red; font-weight:bold">@ViewBag.TongSoLuong</td>
            <td></td>
            <td style="color:red; font-weight:bold">@String.Format("{0:0,0}", ViewBag.TongThanhTien) VND</td>
            <td style="color:black;"> <button class="btn btn-outline-dark">@Html.ActionLink("Đặt hàng", "DatHang", "GioHang")</button></td>
            <td></td>
            <td></td>
        </tr>
    </table>
</div>


